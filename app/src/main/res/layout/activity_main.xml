<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Phone"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/samsung"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_phone"
        android:text="@string/phone_name"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_phone"
        android:text="$522.99"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_phone"
        android:text="@string/description"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/icon_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_decription"
        android:src="@drawable/baseline_phone_iphone_24"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_memory"
        android:text="256GB|8GB"
        android:layout_alignTop="@+id/icon_memory"
        android:layout_alignBottom="@+id/icon_memory"
        />
    <ImageView
        android:id="@+id/icon_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_photo_camera_24"
        android:layout_below="@+id/icon_memory"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_camera"
        android:text="50 MP,f/1.8,23mm (wide)"
        android:layout_alignTop="@+id/icon_camera"
        android:layout_alignBottom="@+id/icon_camera"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="BOOKMARK"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button"
        android:layout_alignBottom="@+id/button"
        android:src="@drawable/baseline_bookmark_border_24"
        android:layout_marginStart="16dp"
        />

</RelativeLayout>